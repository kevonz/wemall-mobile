<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wode_has_login_layout"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/custom_pottery_red">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/circle_image"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/self_photo"
        app:civ_border_width="2dp"
        app:civ_border_color="#d5ea6f81"/>

    <ImageView
        android:id="@+id/setting_has_login"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerInside"
        android:src="@drawable/mypage_navigationbar_icon_setting"
        android:visibility="visible" />

    <TextView
        android:id="@+id/wode_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/self_center"
        android:textColor="@color/custom_white"
        android:textSize="18sp" />

</RelativeLayout>