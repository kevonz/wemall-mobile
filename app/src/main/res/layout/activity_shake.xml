<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/RelativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/custom_pottery_red">

        <Button android:id="@+id/button_back"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:onClick="click"
                android:background="@null"
                android:drawableLeft="@drawable/btn_back_normal"
                android:textColor="@android:color/white"
                android:text="返回"/>

        <TextView android:id="@+id/textView_qrcode_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:layout_alignBaseline="@+id/button_back"
                  android:layout_alignBottom="@+id/button_back"
                  android:textColor="@android:color/white"
                  android:textSize="18sp"
                  android:text="摇一摇"/>
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#a5ea6f81">
        <ImageView
            android:id="@+id/imageView_main_flower"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/shake_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView_main_logoup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shake_logo_up" />
            <ImageView
                android:id="@+id/imageView_main_logodown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shake_logo_down" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
