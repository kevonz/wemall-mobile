<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/login_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/login_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/custom_pottery_red" />
        <ImageView
            android:id="@+id/dialog_detail_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/waimai_shop_list_item_magin_left"
            android:src="@drawable/waimai_shopmenu_dish_icon_close" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/login_input">

        <EditText
            android:id="@+id/loginphone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_dialog_button_height"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:drawableLeft="@drawable/phone_number"
            android:drawablePadding="6dp"
            android:background="@drawable/waimai_binding_input_bg"
            android:gravity="center_vertical"
            android:hint="手机号"
            android:inputType="phone|text"
            android:maxLength="11"
            android:padding="@dimen/waimai_shoplist_filter_item_margin_right"
            android:singleLine="true"
            android:textColorHint="@color/custom_hint" />

        <EditText
            android:id="@+id/loginpassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_dialog_button_height"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="@dimen/waimai_shoplist_filter_item_margin_right"
            android:drawableLeft="@drawable/icon_login_pwd"
            android:drawablePadding="6dp"
            android:background="@drawable/waimai_binding_input_bg"
            android:gravity="center_vertical"
            android:hint="密码"
            android:inputType="textPassword"
            android:padding="@dimen/waimai_shoplist_filter_item_margin_right"
            android:singleLine="true"
            android:textColorHint="@color/custom_hint" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/goregister"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_dialog_button_height"
                android:layout_marginTop="@dimen/waimai_shoplist_filter_item_padding"
                android:layout_weight="1"
                android:background="@drawable/waimai_binding_btn_selector"
                android:enabled="true"
                android:gravity="center"
                android:padding="@dimen/waimai_shoplist_filter_item_margin_right"
                android:singleLine="true"
                android:text="去注册"
                android:textColor="@color/custom_white" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_dialog_button_height"
                android:layout_marginTop="@dimen/waimai_shoplist_filter_item_padding"
                android:layout_weight="1"
                android:background="@drawable/waimai_binding_btn_selector"
                android:enabled="true"
                android:gravity="center"
                android:padding="@dimen/waimai_shoplist_filter_item_margin_right"
                android:singleLine="true"
                android:text="登录"
                android:textColor="@color/custom_white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>